.HostelOptions {
  background-color: rgba(255, 255, 255, 0.6);
  padding: 10px;
  max-width: 600px;
  max-height: 500px;
  margin: 0 auto;
  color: black;
  border-radius: 50px;
  margin-top: 10%;
  margin-bottom: 10%;
  background-image: url(<%= asset_data_uri 'image2.jpg' %>);
  background-size: cover;
  background-repeat: no-repeat;
  max-height: 100%;
}

.OptionsHeading {
  font-size: 25px;
  color: black;
  padding: 10px;
}

.OptionsLink {
  text-decoration: none;
  color: black;
  font-size: 20px;
}

.OptionsLink:hover {
  color: gray;
}

.HostelForm {
  background-color: rgba(0, 0, 0, 0.6);
  padding: 10px;
  max-width: 600px;
  margin: 0 auto;
  border-radius: 50px;
  background-image: url(<%= asset_data_uri 'image5.jpg' %>);
  background-size: cover;
  background-repeat: no-repeat;
  max-height: 100%;
}

.BookingConfirmed {
  background-color: rgba(0, 0, 0, 0.6);

  max-width: 600px;
  margin: 0 auto;
  color: white;
  border-radius: 15px;
  padding: 10px;
  font-size: 25px;
}

.ConfirmButton {
  font-size: 25px;
  background-color: white;
  border: transparent;
  padding: 5px;
  color: black;
  border-radius: 2px;
}

.Buttons {
  display: flex;
  justify-content: space-between;
}
