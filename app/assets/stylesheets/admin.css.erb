.Table {
  background-color: rgba(0, 0, 0, 0.6);
  min-width: 1200px;
  max-width: 100%;
  margin: 0 auto;
  color: white;
  font-size: 30px;
}

.Table table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
  padding: 10px;
}

.KitchenButtons {
  max-width: 200px;
  margin: 10px auto;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 10px;
}

.DeleteButton {
  background-color: rgba(255, 0, 0, 0.3);
  padding: 8px;
  color: white;
  font-size: 25px;
  border: transparent;
}

.TableButton {
  margin-top: 2%;
}
