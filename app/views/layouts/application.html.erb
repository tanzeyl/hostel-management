    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="Body">
  <nav class="navbar navbar-expand-md navbar-light NavbarTop">
  <% if @current_user %>
    <div class="Salutation">
      <%= link_to "Graphic Era", dash_path, class: "navbar-brand NavTitle" %>
      <div class="NavDash">
        <p class="Welcome">Welcome <%= @current_user.first_name %></p>&nbsp&nbsp&nbsp
        <%= button_to " Sign Out!", destroy_session_path, method: "delete", class: "NavButtons" %>
      </div>
    </div>
  <% else %>
    <%= link_to "Graphic Era", "/", class: "navbar-brand NavTitle" %>
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto navbar-right NavList">
      <li class="nav-item">
      </li>
      <li class="nav-item NavItem">
      </li>
    </ul>
  </div>
  </nav>
  <% if flash[:error] %>
    <p><center class="Flash"><%= flash[:error] %></center></p>
  <% end %>
    <%= yield %>
     <footer class="nav-color navbar-fixed-bottom">
	<div class="container">
		<center>
