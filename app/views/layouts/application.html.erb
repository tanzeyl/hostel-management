<!DOCTYPE html>
<html>
  <head>
    <title>AppManager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if @current_user %>
    <div class="Salutation">
      <div class="NavDash">
        <p>Welcome <%= @current_user.first_name %></p>&nbsp&nbsp&nbsp
        <%= button_to "Dashboard", dash_path, method: "get", class: "NavButtons" %>
      </div>
      <%= button_to " Sign Out!", destroy_session_path, method: "delete", class: "NavButtons" %>
    </div>
  <% end %>
  <% if flash[:error] %>
    <p><center class="Flash"><%= flash[:error] %></center></p>
  <% end %>
    <%= yield %>
  </body>
</html>
